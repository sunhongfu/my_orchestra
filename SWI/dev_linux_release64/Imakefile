TOOLSET = DEV_LINUX_RELEASE64

CxxCompileFlags( $(CXXRECONOXFLAGS) -I$(TOP)/lx/include )

LINKERFLAGS = \
    -L$(TOP)/recon/Orchestra/Cartesian2D/dev_linux_release64 \
    -L$(TOP)/recon/Orchestra/Gradwarp/dev_linux_release64 \
    -L$(TOP)/recon/Orchestra/Asset/dev_linux_release64 \
    -L$(TOP)/recon/Orchestra/Calibration/dev_linux_release64 \
    -L$(TOP)/recon/Orchestra/Arc/dev_linux_release64 \
    -L$(TOP)/recon/Orchestra/Core/dev_linux_release64 \
    -L$(TOP)/recon/Orchestra/Legacy/dev_linux_release64 \
    -L$(TOP)/recon/Orchestra/Control/dev_linux_release64 \
    -L$(TOP)/recon/Orchestra/Common/dev_linux_release64 \
    -L$(TOP)/recon/Orchestra/Crucial/dev_linux_release64

LIBS = \
    -lOrchestraCartesian2D \
    -lOrchestraGradwarp \
    -lOrchestraAsset \
    -lOrchestraCore \
    -lOrchestraCrucial \
    -lOrchestraLegacy \
    -lOrchestraControl \
    -lOrchestraCommon \
    -lOrchestraAsset \
    -lOrchestraArc \
	LinkWithReconHdf5 \
	LinkWithReconDicom \
	LinkWithReconMath \
	LinkWithReconSystem \
    LinkWithBoost \
    LinkWithLapack \
	LinkWithFFTW \
    LinkWithBlitz \
    -lpthread \
    -lstdc++ \
    -ldl \
    -fopenmp \
    -lrt

#include "../Imakefile.common"

LinkUsingCxx($(EXECUTABLE), $(OBJS), $(CXXLIBFLAGS) $(LINKERFLAGS), $(LIBS))
EnableConcertoBuildMonitoring()
Generate64BitReleaseCode()
